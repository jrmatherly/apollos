{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Apollos",
            "type": "debugpy",
            "request": "launch",
            "module": "src.apollos.main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "sudo": false,
            "args": [
                "-v",
                "--anonymous-mode",
                // "--non-interactive",
                "--port=42110",
                // "--host=example.com",
                // "--sslcert=ssl.crt",
                // "--sslkey=ssl.key",
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "APOLLOS_ADMIN_EMAIL": "admin",
                "APOLLOS_ADMIN_PASSWORD": "admin",
                "USE_EMBEDDED_DB": "true",
                "APOLLOS_DEBUG": "true",
                "APOLLOS_TELEMETRY_DISABLED": "true",
                // Configure Code Sandbox
                // "APOLLOS_TERRARIUM_URL": "http://localhost:8080",
                // Enable Promptracer to debug prompt flows
                // "PROMPTRACE_DIR": "\${workspaceFolder}/promptrace",
                // Enable Apollos Operator
                // "APOLLOS_OPERATOR_ENABLED": "True",
            }
        },
    ]
}
