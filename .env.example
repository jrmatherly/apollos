# Apollos Configuration
# See documentation for all options: https://docs.apollosai.dev/get-started/setup

# Domain Configuration (required for production)
APOLLOS_DOMAIN=apollosai.dev
APOLLOS_ALLOWED_DOMAIN=apollosai.dev
APOLLOS_NO_HTTPS=false

# Django
APOLLOS_DJANGO_SECRET_KEY=change-me-in-production

# Email (Resend)
RESEND_API_KEY=
RESEND_EMAIL=noreply@apollosai.dev
RESEND_AUDIENCE_ID=
APOLLOS_SUPPORT_EMAIL=support@apollosai.dev

# Database
POSTGRES_DB=apollos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# LLM Providers (at least one required)
OPENAI_API_KEY=
# OPENAI_BASE_URL=http://host.docker.internal:11434/v1/ # Uncomment to use Ollama or OpenAI compatible API
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
